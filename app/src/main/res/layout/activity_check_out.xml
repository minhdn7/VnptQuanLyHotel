<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vnpt.hotel.manager.ui.activity.CheckOutActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/toolbar_checkin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <FrameLayout
                    android:id="@+id/layout_imgView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_hotel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/nha_nghi_1"
                        android:scaleType="fitXY"
                        android:paddingBottom="@dimen/_68sdp"/>
                    <LinearLayout
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/custom_border_backgroud_blue">
                        <LinearLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_35sdp"
                            android:layout_marginRight="@dimen/_35sdp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:background="@drawable/custom_border_backgroud_blue">
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_search"
                                android:layout_marginLeft="@dimen/_3sdp"/>
                            <EditText
                                android:hint="Số phòng"
                                android:textColorHint="@color/colorText"
                                android:textColor="@color/md_black"
                                android:layout_width="0dp"
                                android:layout_weight="8"
                                android:background="@null"
                                android:fontFamily="@font/font_normal"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="3dp"
                                android:textCursorDrawable="@color/colorPrimaryDark"
                                android:textSize="@dimen/_14sdp"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:layout_marginRight="@dimen/_3sdp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_scan_qrcode"/>
                        </LinearLayout>
                        <Button
                            android:id="@+id/btnCheckOut"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_35sdp"
                            android:layout_marginRight="@dimen/_35sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Check Out"
                            android:textSize="@dimen/_15ssp"
                            android:fontFamily="@font/fontbold"
                            android:textColor="@color/md_white"
                            android:background="@drawable/custom_btn_backgroud_blue">
                        </Button>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
